mixin menu (items)
    for item in items 
        li 
            a(href=item.url) #{item.name}

mixin aboutCard (item)
    figure
        figcaption.about-card
            .about-img
                picture 
                    source(srcset=item.src + ".webp", tipe="image/webp")
                    img(src=item.src + ".png", alt=item.alt)
                .employee-social.flex
                    a.fb(href="#") 
                    a.tw(href="#") 
                    a.gg(href="#")
                    a.in(href="#")
            .description-card._anim-items
                p.employee-name #{item.employeeName}
                p.description.roboto #{item.description}

mixin blogPost (item)
    .post-img
        img(src=item.src, alt=item.alt)
    .post-info
        .data-name-post.flex 
            .data-post
                p #{item.dataPost}
                span #{item.monthPost}
            .name-post
                p.text-left #{item.namePost}
                i.text-left.roboto.sub-name-post By 
                    span Khalil 
                    | Uddin in 
                    span Development!
        p.text-info.description-post.roboto #{item.description}
        a.more-post.roboto(href="#") Read more

mixin brand (items)
    for item in items 
        a(href=item.url) 
            img(src=item.src, alt=item.alt)
            
